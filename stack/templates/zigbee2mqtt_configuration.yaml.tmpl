homeassistant: false
permit_join: false
frontend:
  port: 8080

mqtt:
  base_topic: zigbee2mqtt
  server: mqtt://${MQTT_HOST}:${MQTT_PORT}
  user: ${MQTT_ADMIN_USER}
  password: ${MQTT_ADMIN_PASS}

# Adapter type: specify the adapter/protocol used by zigbee-herdsman
# Common values: 'zstack', 'ezsp', 'deconz', 'znp' (adjust if needed)
adapter: zstack

serial:
  # Uses values from stack/.env (SLZB06_IP, SLZB06_PORT).
  port: tcp://${SLZB06_IP}:${SLZB06_PORT}

advanced:
  channel: ${Z2M_CHANNEL}
  pan_id: ${Z2M_PAN_ID}
  ext_pan_id: ${Z2M_EXT_PAN_ID}
  network_key: ${Z2M_NETWORK_KEY}

availability: true
