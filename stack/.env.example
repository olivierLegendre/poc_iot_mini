# Copy to .env and set values (do NOT commit .env)
TZ=Europe/Paris

# Host naming for Basics Station TLS (must match gateway LNS URI host)
LNS_HOST=poc-gw.local
LNS_PORT=3443

# LAN devices
SLZB06_IP=<SLZB06_IP>
SLZB06_PORT=6638
# LoRa gateway LAN IP (used for inventory/manual connectivity checks).
RAK_GW_IP=<RAK_GW_IP>
# WisGate web UI password (for manual gateway configuration steps).
WISGATE_PASS=<WISGATE_PASS>

# MQTT (Mosquitto)
MQTT_HOST=mosquitto
MQTT_PORT=1883
MQTT_ADMIN_USER=admin
MQTT_ADMIN_PASS=change_me_admin
MQTT_INGEST_USER=ingest
MQTT_INGEST_PASS=change_me_ingest
MQTT_CONTROL_USER=control
MQTT_CONTROL_PASS=change_me_control

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Zigbee2MQTT image tag
ZIGBEE2MQTT_TAG=1.40.2

# Zigbee network parameters (source of truth for rendered zigbee2mqtt/configuration.yaml)
# Set these from your coordinator backup and keep them stable after commissioning.
Z2M_CHANNEL=15
Z2M_PAN_ID=0x1A62
Z2M_EXT_PAN_ID=[0x00,0x12,0x4B,0x00,0x25,0x7B,0xF0,0x70]
Z2M_NETWORK_KEY=[0xEF,0xA2,0x40,0xF9,0xA2,0xBE,0x4D,0xBA,0xE6,0x33,0x35,0x73,0xF1,0xEA,0x0A,0x07]

# Optional: enable Zigbee2MQTT services
# COMPOSE_PROFILES=zigbee
COMPOSE_PROFILES=zigbee

# PostgreSQL
PG_HOST=postgres
PG_PORT=5432
PG_DB=chirpstack
PG_USER=chirpstack
PG_PASSWORD=change_me_pg

# ChirpStack admin (UI login)
CHIRPSTACK_ADMIN_EMAIL=admin@example.com
CHIRPSTACK_ADMIN_PASSWORD=change_me_chirpstack
CHIRPSTACK_REGION_ID=eu868
CHIRPSTACK_REGION_DESCRIPTION=EU868
CHIRPSTACK_REGION_COMMON_NAME=EU868
CHIRPSTACK_REGION_TOPIC_PREFIX=eu868

# Node-RED admin (optional)
NODERED_USER=admin
NODERED_PASSWORD=change_me_nodered

# Dashboard: last-seen threshold in minutes (online if within this window)
THRESHOLD_LAST_SEEN_MINUTES=60
